<style>
    :root {
        --bg: #ffffff;
        --card: #f5f5f5;
        --text: #2d3436;
        --muted: #636e72;
        --accent: #808080;
        --accent-2: #666666;
        --ok: #5a5a5a;
        --border: #e0e0e0;
        --shadow: 0 2px 8px rgba(45, 52, 54, 0.08);
        --shadow-lg: 0 4px 16px rgba(45, 52, 54, 0.12);
    }

    * {
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: var(--bg);
        color: var(--text);
    }

    .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* ========== NAVIGATION ========== */
    .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--bg);
        border-bottom: 1px solid var(--border);
        box-shadow: var(--shadow);
    }

    .nav-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 70px;
    }

    .nav-brand {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text);
        letter-spacing: -0.5px;
    }

    .logo {
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .nav-menu {
        display: flex;
        list-style: none;
        gap: 2rem;
        margin: 0;
        padding: 0;
        align-items: center;
    }

    .nav-link {
        color: var(--text);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: color 0.3s ease;
        padding: 0.5rem 0;
        border-bottom: 2px solid transparent;
    }

    .nav-link:hover {
        color: var(--accent);
        border-bottom-color: var(--accent);
    }

    .nav-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        gap: 0.4rem;
    }

    .hamburger {
        width: 24px;
        height: 3px;
        background: var(--text);
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    /* ========== RESPONSIVE NAVIGATION ========== */
    @@media (max-width: 768px) {
        .nav-toggle {
            display: flex;
        }

        .nav-menu {
            position: absolute;
            top: 70px;
            left: 0;
            right: 0;
            flex-direction: column;
            gap: 0;
            background: var(--bg);
            border-bottom: 1px solid var(--border);
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-menu[aria-expanded="true"] {
            max-height: 300px;
        }

        .nav-menu li {
            width: 100%;
            border-top: 1px solid var(--border);
        }

        .nav-link {
            display: block;
            padding: 1rem;
            border: none;
        }

        .nav-link:hover {
            background: var(--card);
            border: none;
        }
    }

    /* ========== HERO SECTION ========== */
    .hero {
        padding: 8rem 0;
        background: radial-gradient(1200px 500px at 70% -20%, rgba(128,128,128,0.05), transparent), 
                    radial-gradient(1000px 500px at 20% -10%, rgba(102,102,102,0.04), transparent), 
                    var(--bg);
        text-align: center;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
        margin: 0 0 1.5rem;
        letter-spacing: -1px;
    }

    .hero .subtitle {
        font-size: 1.25rem;
        color: var(--muted);
        margin: 0 0 2rem;
        font-weight: 400;
        line-height: 1.6;
    }

    .cta {
        display: inline-block;
        padding: 1rem 2.5rem;
        border-radius: 999px;
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        color: #ffffff;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        box-shadow: var(--shadow);
        cursor: pointer;
        border: none;
    }

    .cta:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .cta:active {
        transform: translateY(0);
    }

    /* ========== SECTIONS ========== */
    .section {
        padding: 6rem 0;
        color: var(--text);
        background: var(--bg);
    }

    .section.alt {
        background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
    }

    .section h2 {
        font-size: 2.5rem;
        margin: 0 0 3rem;
        text-align: center;
        font-weight: 700;
    }

    /* ========== TYPOGRAPHY ========== */
    h1, h2, h3 {
        margin: 0 0 1rem;
        color: var(--text);
    }

    h3 {
        font-size: 1.5rem;
        font-weight: 600;
    }

    p {
        color: var(--muted);
        line-height: 1.8;
        margin: 0 0 1.5rem;
        font-size: 1rem;
    }

    p:last-child {
        margin-bottom: 0;
    }

    a {
        color: var(--accent);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    a:hover {
        color: var(--accent-2);
        text-decoration: underline;
    }

    .accent {
        background: linear-gradient(90deg, var(--accent), var(--accent-2));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    /* ========== ABOUT SECTION ========== */
    .about-wrapper {
        display: flex;
        justify-content: center;
    }

    .about-card {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 2.5rem;
        border-radius: 1.25rem;
        color: var(--text);
        max-width: 700px;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

    .about-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .about-card p {
        margin: 0 0 1.5rem;
    }

    .about-card p:last-child {
        margin-bottom: 0;
    }

    /* ========== TESTIMONIALS SECTION ========== */
    .testimonials-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        max-width: 700px;
        margin: 0 auto;
    }

    .testimonial {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 2rem;
        border-radius: 1.25rem;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

    .testimonial:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .testimonial blockquote {
        margin: 0 0 1.5rem;
        font-size: 1.1rem;
        color: var(--text);
        font-style: italic;
        line-height: 1.8;
    }

    .testimonial figcaption {
        font-size: 0.95rem;
        color: var(--muted);
    }

    .testimonial strong {
        color: var(--text);
        font-weight: 600;
    }

    /* ========== COURSES SECTION ========== */
    .courses-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .course {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 1.25rem;
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

    .course:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-4px);
    }

    .course-header {
        padding: 2rem;
        border-bottom: 1px solid var(--border);
    }

    .course h3 {
        margin: 0 0 0.75rem;
        font-size: 1.35rem;
    }

    .course-summary {
        font-size: 0.95rem;
        color: var(--muted);
        margin: 0;
        font-weight: 500;
    }

    .course-content {
        padding: 2rem;
        flex: 1;
    }

    .course-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .course-features li {
        padding: 0.75rem 0;
        padding-left: 1.75rem;
        position: relative;
        color: var(--muted);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .course-features li::before {
        content: "✓";
        position: absolute;
        left: 0;
        color: var(--accent);
        font-weight: 600;
    }

    .course-footer {
        padding: 2rem;
        border-top: 1px solid var(--border);
        background: rgba(128, 128, 128, 0.02);
    }

    .meta-item {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
    }

    .meta-item:last-child {
        margin-bottom: 0;
    }

    .meta-label {
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        color: var(--accent);
        letter-spacing: 0.5px;
    }

    .meta-value {
        font-size: 0.95rem;
        color: var(--muted);
        margin-top: 0.25rem;
    }

    /* ========== CONTACT SECTION ========== */
    .contact-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: start;
    }

    .contact-card,
    .media-card {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 2.5rem;
        border-radius: 1.25rem;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

    .contact-card:hover,
    .media-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
    }

    .contact-card h3,
    .media-card h3 {
        margin-top: 0;
    }

    .contact-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .contact-list li {
        padding: 1rem 0;
        border-bottom: 1px solid var(--border);
        display: flex;
        flex-direction: column;
    }

    .contact-list li:last-child {
        border-bottom: none;
    }

    .contact-label {
        font-weight: 600;
        color: var(--text);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .contact-value {
        color: var(--muted);
        font-size: 0.95rem;
    }

    .contact-value a {
        color: var(--accent);
        font-weight: 500;
    }

    .contact-value a:hover {
        color: var(--accent-2);
    }

    .video-wrapper {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        border-radius: 1rem;
    }

    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 1rem;
    }

    /* ========== FOOTER ========== */
    .footer {
        padding: 3rem 0;
        background: var(--card);
        color: var(--muted);
        border-top: 1px solid var(--border);
    }

    .footer-content {
        text-align: center;
    }

    .footer-copyright {
        margin: 0 0 1.5rem;
        font-size: 0.9rem;
    }

    .footer-nav {
        display: flex;
        gap: 2rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .footer-nav a {
        color: var(--text);
        font-size: 0.9rem;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .footer-nav a:hover {
        color: var(--accent);
    }

    /* ========== RESPONSIVE DESIGN ========== */
    @@media (max-width: 1000px) {
        .courses-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .hero h1 {
            font-size: 2.5rem;
        }
    }

    @@media (max-width: 768px) {
        .hero {
            padding: 6rem 0;
        }

        .hero h1 {
            font-size: 2rem;
        }

        .hero .subtitle {
            font-size: 1.1rem;
        }

        .section {
            padding: 4rem 0;
        }

        .section h2 {
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .courses-grid {
            grid-template-columns: 1fr;
        }

        .contact-wrapper {
            grid-template-columns: 1fr;
        }

        .course-header {
            padding: 1.5rem;
        }

        .course-content {
            padding: 1.5rem;
        }

        .course-footer {
            padding: 1.5rem;
        }

        .about-card {
            padding: 1.75rem;
        }

        .contact-card,
        .media-card {
            padding: 1.75rem;
        }

        .cta {
            padding: 0.85rem 2rem;
            font-size: 0.95rem;
        }
    }

    @@media (max-width: 480px) {
        .hero h1 {
            font-size: 1.75rem;
        }

        .hero .subtitle {
            font-size: 1rem;
        }

        .section h2 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

        h3 {
            font-size: 1.25rem;
        }

        .course-features li {
            padding-left: 1.5rem;
            font-size: 0.9rem;
        }

        .footer-nav {
            gap: 1rem;
        }
    }
</style>
