            top: 70px;
            left: 0;
            right: 0;
            flex-direction: column;
            gap: 0;
            background: rgba(250, 227, 131, 0.98);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .nav-menu.active {
            max-height: 400px;
        }

        .nav-menu li {
            width: 100%;
            border-top: 1px solid var(--border);
        }

        .nav-link {
            display: block;
            padding: 1rem;
            border: none;
        }

        .nav-link::after {
            display: none;
        }

        .nav-link:hover {
            background: rgba(77, 145, 110, 0.06);
        }
    }

