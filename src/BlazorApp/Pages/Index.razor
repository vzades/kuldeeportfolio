<script>
    window.initScrollAnimations = function() {
        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view');
                    // Only observe once
                    if (!entry.target.dataset.animated) {
                        entry.target.dataset.animated = 'true';
                    }
                }
            });
        }, observerOptions);

        // Observe sections
        document.querySelectorAll('[data-scroll], [data-scroll-item]').forEach(el => {
            observer.observe(el);
        });
    };

    window.initCarousel = function() {
        const carousel = document.querySelector('.testimonials-carousel');
        const prevBtn = document.querySelector('.carousel-arrow-prev');
        const nextBtn = document.querySelector('.carousel-arrow-next');
        const container = document.querySelector('.carousel-container');

        if (!carousel || !prevBtn || !nextBtn || !container) return;

        let currentIndex = 0;
        const items = carousel.querySelectorAll('.testimonial-video, .testimonial-text');
        const totalItems = items.length;

        // Navigate to specific index
        function goToSlide(index) {
            if (totalItems === 0) return;

            // Loop around
            if (index < 0) {
                currentIndex = totalItems - 1;
            } else if (index >= totalItems) {
                currentIndex = 0;
            } else {
                currentIndex = index;
            }

            // Calculate scroll distance
            const itemWidth = items[0].offsetWidth;
            const gap = parseInt(window.getComputedStyle(carousel).gap) || 32;
            const scrollDistance = currentIndex * (itemWidth + gap);

            carousel.style.transform = `translateX(-${scrollDistance}px)`;
        }

        // Button click handlers
        prevBtn.addEventListener('click', () => {
            goToSlide(currentIndex - 1);
        });

        nextBtn.addEventListener('click', () => {
            goToSlide(currentIndex + 1);
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                goToSlide(currentIndex - 1);
            } else if (e.key === 'ArrowRight') {
                goToSlide(currentIndex + 1);
            }
        });

        // Initialize to first slide
        goToSlide(0);
    };

    // Initialize carousel when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
            window.initCarousel();
        });
    } else {
        window.initCarousel();
    }
</script>
