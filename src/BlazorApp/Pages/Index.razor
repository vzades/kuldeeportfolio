        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: 1;
    }

    .breath-lines {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0.6;
        animation: breathing 6s ease-in-out infinite;
    }

    .breath-lines svg {
        width: 100%;
        height: 100%;
    }

    @@keyframes breathing {
        0%, 100% { opacity: 0.4; transform: translateY(0); }
        50% { opacity: 0.8; transform: translateY(-20px); }
    }

    .flute-holes {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: flex-end;
        padding: 4rem;
    }

    .hole {
